#game.row-fluid
  .span8.text-center
    .imgWrap
      = image_tag "hangman-#{@game.missed_counter}.gif",width: 250, height: 300
    %p.hangman-word
      - @game.word_placeholder.each do |u|
        = u
    - if @game.missed_counter < 6 && @game.counter != @game.word.length
      %p.center.explanation.guessWord Guess the word
      %form{:action => "/game/user_input", :method => "get"}
        .center
          %input.button.character.charA{:name => "character", :type => "submit", :value => "A"}/
          %input.button.character.charB{:name => "character", :type => "submit", :value => "B"}/
          %input.button.character.charC{:name => "character", :type => "submit", :value => "C"}/
          %input.button.character.charD{:name => "character", :type => "submit", :value => "D"}/
