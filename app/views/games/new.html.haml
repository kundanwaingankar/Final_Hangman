          %input.button.character.charG{:name => "character", :type => "submit", :value => "G"}/
          %input.button.character.charH{:name => "character", :type => "submit", :value => "H"}/
          %input.button.character.charI{:name => "character", :type => "submit", :value => "I"}/
          %br/
          %input.button.character.charJ{:name => "character", :type => "submit", :value => "J"}/
          %input.button.character.charK{:name => "character", :type => "submit", :value => "K"}/
          %input.button.character.charL{:name => "character", :type => "submit", :value => "L"}/
          %input.button.character.charM{:name => "character", :type => "submit", :value => "M"}/
          %input.button.character.charN{:name => "character", :type => "submit", :value => "N"}/
